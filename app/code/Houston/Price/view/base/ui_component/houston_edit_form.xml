<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">houston_edit_form.houston_price_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Houston\Price\Block\Adminhtml\Edit\Form\SaveButton"/>
            <button name="back" class="Houston\Price\Block\Adminhtml\Edit\Form\BackButton"/>
        </buttons>
        <namespace>houston_edit_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>houston_edit_form.houston_price_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="houston_price_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/index/save"/>
        </settings>
        <dataProvider class="Houston\Price\Ui\Model\PriceRequestsDataProvider"
                      name="houston_price_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">houston_edit</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="user_name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">houston_edit</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <dataScope>user_name</dataScope>
            </settings>
        </field>
        <field name="user_email" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">houston_edit</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>user_email</dataScope>
            </settings>
        </field>
        <field name="product_sku" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">houston_edit</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Product SKU</label>
                <dataScope>product_sku</dataScope>
            </settings>
        </field>
        <field name="comment" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">houston_edit</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Comment</label>
                <dataScope>comment</dataScope>
            </settings>
        </field>
        <field name="request_status" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="string">10</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>request_status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Houston\Price\Model\RequestStatusSelectOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>

